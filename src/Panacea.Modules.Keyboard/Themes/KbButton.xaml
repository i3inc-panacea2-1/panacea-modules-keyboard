<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Panacea.Modules.Keyboard.Controls">
    <Style TargetType="{x:Type local:KbButton}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Background" Value="{DynamicResource KeyboardButtonBackground}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ButtonBackground" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:KbButton}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="0">
                        <Border Background="{TemplateBinding ButtonBackground}" CornerRadius="0">
                            <Border
                                BorderBrush="#ffffffff"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                                <Viewbox Stretch="Uniform">
                                    <Grid>
                                        <Border
                                            Name="light"
                                            Height="6"
                                            Margin="10"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top"
                                            Background="yellow"
                                            CornerRadius="4"
                                            Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=LightOpacity}">
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="14"
                                                    Opacity="0.7"
                                                    ShadowDepth="0"
                                                    Color="LightGreen" />
                                            </Border.Effect>
                                        </Border>

                                        <StackPanel
                                            Margin="0,10,0,3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Orientation="Horizontal">
                                            <Image Height="40" Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Image}" />
                                            <Grid>
                                                <TextBlock
                                                    Name="altcaption"
                                                    Padding="0"
                                                    FontSize="32"
                                                    FontWeight="Normal"
                                                    Foreground="White"
                                                    LineHeight="8"
                                                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=AltCaption, Mode=TwoWay}"
                                                    Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=AltCaptionVisibility, Mode=OneWay}" />
                                                <TextBlock
                                                    Name="caption"
                                                    Margin="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CaptionMargin, Mode=OneWay}"
                                                    Padding="0"
                                                    VerticalAlignment="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=VerticalAlignment, Mode=OneWay}"
                                                    FontSize="32"
                                                    FontWeight="Normal"
                                                    Foreground="White"
                                                    LineHeight="8"
                                                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Caption, Mode=TwoWay}"
                                                    Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CaptionVisibility, Mode=OneWay}" />
                                            </Grid>
                                        </StackPanel>
                                        <TextBlock
                                            Name="shiftCaption"
                                            Margin="30,-2,4,20"
                                            Padding="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            FontSize="20"
                                            Foreground="White"
                                            Opacity="0.3"
                                            Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShiftCaption, Mode=TwoWay}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShiftCaptionVisibility, Mode=OneWay}" />

                                    </Grid>
                                </Viewbox>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>